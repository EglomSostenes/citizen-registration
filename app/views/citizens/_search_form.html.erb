<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:full_name_cont, class: 'form-control', placeholder: 'Nome') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:cpf_cont, class: 'form-control', placeholder: 'CPF') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:cns_cont, class: 'form-control', placeholder: 'CNS') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:email_cont, class: 'form-control', placeholder: 'Email') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.select :status_eq, options_for_select(Citizen.statuses), {include_blank: 'Status' }, class: 'form-control' %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:address_uf_eq, class: 'form-control', placeholder: 'UF') %>
    </div>

    <div class="form-group col-2">
      <%= f.label "" %>
      <%= f.search_field(:address_city_cont, class: 'form-control', placeholder: 'Cidade') %>
    </div>


    <div class="form-group col-2">
      <%= f.submit 'Buscar', class: 'btn btn-dark shadow-sm mt-4'  %>
    </div>
  </div>
<% end %>